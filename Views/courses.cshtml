<!DOCTYPE html>
<html>
  <head>
    <title>Hello Friend!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>All courses</h1>
    @if (@Model.Count == 0)
    {
      <p>There are no courses.</p>
    }
    <ul>
      @foreach (var courses in Model)
      {
        <li><a href="/courses/@courses.GetId()">@courses.GetName() -- @courses.GetCourseNumber()</a></li>
      }
    </ul>
    <form action="/courses/delete" method="post">
      <button type="submit">Clear all categories</button>
    </form>
    <a href="/courses/new">Add new courses</a>
    <br>
    <a href="/">Home</a>
  </body>
</html>
