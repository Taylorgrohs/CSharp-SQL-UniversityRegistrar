<!DOCTYPE html>
<html>
  <head>
    <title>Hello Friend!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    @if (@Model.Count == 0)
    {
      <p>No students have been added yet!</p>
    }
    else
    {
      <h1>Here is your list of students:</h1>
      <ul>
        @foreach (var student in Model)
        {
          <li><a href="/students/@student.GetId()">@student.GetName() -- @student.GetDate().ToString("d")</li>
        }
      </ul>
      <form action="/students/delete" method="post">
        <button type="submit">Clear all students</button>
      </form>
    }
    <p><a href="/students/new">Add a new student</a></p>
    <p><a href="/">Return home</a></p>
  </body>
</html>
